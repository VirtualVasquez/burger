<img src="../public/assets/img/burger.png">

<h1>Eat-Da-Burger!</h1>

<div>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{layouts/main devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{layouts/main devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<form class="create-form">

  <div class="form-group">
    <input type="text" id="b" name="name">
  </div>

  <button type="submit">Submit</button>
</form>
