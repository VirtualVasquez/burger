<div class="container center text-center">

<img src="/assets/img/burger.png" id="burgerImage" height="300" width="450">
<h1>Eat-Da-Burger!</h1>

  <div class="row">
    <!--Burgers that can be devoured-->
    <div class="col-md-6">  
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour it!</button>
              </form>

            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>  
      <!--Burgers that have been devoured-->
    <div class="col-md-6">  
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            {{> burger/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
  <form class="create-update-form" {{!-- action="/api/burgers" --}} method="POST">

    <div class="form-group">
      <input class="form-control input-lg" type="text" id="bu" name="name">
    </div>

    <button type="submit">Submit</button>
  </form>
  </div>

</div>