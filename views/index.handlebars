<img src="/assets/img/burger.png" id="burgerImage" height="300" width="400">
<h1>Eat-Da-Burger!</h1>

<!--Burgers that can be devoured-->
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{>burgers/burger-block devoured=false }}
    {{/unless}}
  {{/each}}
</ul>

<!--Burgers that have been devoured-->
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">

  <div class="form-group">
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Submit</button>
</form>